<!DOCTYPE html>
<html>
  <head>
    <title>Items</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="container">
    <nav class="navbar navbar-light bg-light">
      <div class="container-fluid">
        <a href="/items"><span class="navbar-brand mb-0 h1">Market Management</span></a>
        <a href="/items/additem"
          ><button class="btn btn-outline-success add">Add</button></a
        >
      </div>
    </nav>
    <h1>Items</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Manufacturer</th>
          <th scope="col">Expire</th>
          <th scope="col">Price</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (items.length > 0) { %> <% items.forEach(item => { %>

        <tr>
          <td><%= item.name %></td>
          <td><%= item.manufacturer %></td>
          <td><%= item.expireAt %></td>
          <td><%= item.price %></td>
          <td>
            <a class="me-2" href="items/<%= item._id %>"
              ><img
                src="https://img.icons8.com/fluency/25/000000/delete-sign.png" /></a
            ><a href="/items/edititem/<%= item._id %>"
              ><img src="https://img.icons8.com/color/25/000000/edit.png"
            /></a>
          </td>
          <td></td>
        </tr>

        <% }) %> <% } else { %>
        <p>There are no items to display...</p>
        <% } %>
      </tbody>
    </table>
    <script src="/javascripts/script.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
